{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "paths": { "@/*": ["./*"] },
    "noEmit": true
  },
  "include": ["src", "vite-env.d.ts"]
}
